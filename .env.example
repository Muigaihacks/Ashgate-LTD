# =============================================================================
# Ashgate Backend - Environment template
# =============================================================================
# Copy this file to .env and fill in your values.
# The DATABASE is separate from this codebase: create PostgreSQL (and optionally
# Redis) on your server, then set the variables below. See DEPLOY_ON_YOUR_SERVER.md.
# =============================================================================

APP_NAME="Ashgate Limited"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=production

# -----------------------------------------------------------------------------
# Database (PostgreSQL) - CREATE THIS ON YOUR SERVER; NOT INCLUDED IN REPO
# -----------------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=ashgate
DB_USERNAME=ashgate_user
DB_PASSWORD=
# Or use a single URL (overrides host/port/database/user/password):
# DB_URL=postgresql://user:password@host:5432/ashgate?sslmode=prefer

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database

CACHE_STORE=database

# -----------------------------------------------------------------------------
# Redis (optional - for cache/sessions; if not used, CACHE_STORE=database above)
# -----------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# CORS - Frontend origin(s) that may call the API (comma-separated)
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=https://www.ashgate.co.ke,https://ashgate.co.ke

# -----------------------------------------------------------------------------
# Laravel Sanctum - API auth (stateful domains must match frontend)
# -----------------------------------------------------------------------------
SANCTUM_STATEFUL_DOMAINS=www.ashgate.co.ke,ashgate.co.ke

# -----------------------------------------------------------------------------
# Mail
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=info@ashgate.co.ke
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# File storage - Cloudflare R2 (or use FILESYSTEM_DISK=public for local)
# -----------------------------------------------------------------------------
# FILESYSTEM_DISK=r2
# CLOUDFLARE_R2_ACCESS_KEY_ID=
# CLOUDFLARE_R2_SECRET_ACCESS_KEY=
# CLOUDFLARE_R2_BUCKET=
# CLOUDFLARE_R2_URL=
# CLOUDFLARE_R2_ENDPOINT=

# -----------------------------------------------------------------------------
# Activity logging (optional)
# -----------------------------------------------------------------------------
ACTIVITY_LOGGER_ENABLED=true
ACTIVITY_LOGGER_TABLE_NAME=activity_log

VITE_APP_NAME="${APP_NAME}"
